{% layout "layouts/base.liquid" %}

{% block head %}
    <title>
        {{ title }}
    </title>
{% endblock %}

{% block content %}
    
    {% if accessToken == false %}
        <p>Welcome! Please sign in.</p>
        <a href="http://localhost:8500/login" class="button">Login</a>
    {% elsif accessToken == true %}
    
        <p>Welcome {{ profile_name }}</p>
        <a href="http://localhost:8500/refresh_token" class="button">Refresh Token</a>
        <a href="http://localhost:8500/logout" class="button">Logout...</a>
        <div class="all-tracks">
            {% for track in tracks %}
                <section onclick="playThisTrack('{{ track.album.id }}', 0)" class="track-group">
                <b>{{ track.artists[0].name }}</b>
                <p>{{ track.name }}</p>
                <img src= {{ track.album.images[0].url }}>
            </section>
            {% endfor %}
        </div>

        <div class="all-playlists">
            {% for playlist in playlists %}
                <section onclick="playThisPlaylist('{{ playlist.id }}', 0)" class="playlist-group">
                    <p>{{ playlist.name }}</p>
                    <img src = {{ playlist.images[0].url }}>
                </section>
            {% endfor %}
        </div>

