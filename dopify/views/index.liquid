        <input type="checkbox" id="queueButton" checked>
        <div id="queue">
            <label>
                Queue
                <input type="radio" name="queueRecentlyPlayed" id="queueSelected">
            </label>
            <label>
                Recently Played
                <input type="radio" name="queueRecentlyPlayed" id="recentlyPlayedSelected">
            </label>

            <div id="queueContent" class="queueRecentlyPlayedContent">
                
                <h3>Now Playing</h3>
                <section onclick="playThisTrack('{{ queue.currently_playing.album.id }}', 0)" class="queue-group">
                    <img class="queuePictures" src={{ queue.currently_playing.album.images[1].url }}>
                    <b>{{queue.currently_playing.artists[0].name}}</b>
                    <p>{{ queue.currently_playing.name }}</p>
                </section>
                
                <h3>Next up</h3>
                {% for track in queue.queue %}
                    <section onclick="playThisTrack('{{ track.album.id }}', 0)" class="queue-group">
                        <img class="queuePictures" src={{ track.album.images[1].url }}></img>
                        <b>{{ track.artists[0].name }}</b>
                        <p>{{ track.name }}</p>
                    </section>
                    
                {% endfor %}
            </div>

            <div id="recentlyPlayedContent" class="queueRecentlyPlayedContent">
                {% for track in recentlyPlayed.items %}
                    <section onclick="playThisTrack('{{ track.track.album.id }}', 0)" class="queue-group">
                        <img class="queuePictures" src={{ track.track.album.images[1].url }}>
                        <b>{{ track.track.artists[0].name }}</b>
                        <p>{{ track.track.name }}</p>
                    </section>
                {% endfor %}
            </div>
        </div>

        {% comment %} <button id="sendNotification">Push Notification</button> {% endcomment %}
        <label>
            volume slider
            <input id="volumeSlider" type="range" min="0" max="1" step=".001" value=".5" name="volume" class="slider" orient="horizontal">	
        </label>
        <label>
            seek
            <input id="seek" type="range" min="0" max="1" step=".001" value=".5" name="seek" class="slider" orient="horizontal">	
        </label>
        <p id="timestamp"></p>
        <img id="album">
        <h2 id="artistname"></h2>
        <p id="trackname"></p>
        <script src="https://sdk.scdn.co/spotify-player.js"></script>
        <script src="./slider.js"></script>
        <script src="./script.js"></script>
    {% endif %}
{% endblock %}

